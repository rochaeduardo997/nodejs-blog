<%- include ('partials/header'); %>

  <body>
    <%- include ('partials/navbar'); %>

      <div class="container">
        <br>

        <div class="card">

          <div class="card-header">
            <h3>
              <%= post.title %>
            </h3>
          </div>

          <div class="card-body">
            <p>
              <%= post.body %>
            </p>
          </div>
        </div>
      </div>

      <br>

      <div class="container">
        <div class="card">

          <div class="card-header">
            <h5>Comentários</h5>
          </div>

          <% comments.forEach(comment=> { %>
            <div class="card-body">
              <div class="card">
                <div class="card-body">
                  <div class="card-header">
                    Autor: <%= comment.authorname %>
                  </div>
                  <div class="card-body">
                    <%= comment.comment %>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>

              <div class="card-footer">
                <form method="POST" action="/savecomment">
                  <input class="form-control" name="authorname" placeholder="Nome do autor" />

                  <textarea class="form-control" placeholder="Escreva seu comentário aqui" name="comment"></textarea>

                  <input type="hidden" name="postID" value="<%= post.id %>">

                  <button class="btn btn-success">Comentar</button>
                </form>
              </div>
        </div>
      </div>
  </body>

  <%- include ('partials/footer'); %>